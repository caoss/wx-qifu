/* pages/home.wxss */
page{
    height: 100%;
    background:#FFBC00
}
.home-con{
    width: 100%;
    height: 100%;
}
.home_bg{
    width: 100%;
    height: 100%;
    position: fixed;
}
.detail_pop{
    position: fixed;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.6);
    z-index: 2;
}
.detail_con{
    position: fixed;
    width: 100%;
    height: 100%;
    z-index: 3;
    display: flex;
    flex-direction: column;
    justify-content: center;
}
.detail_img_con{
    width: 100%;
    padding: 0 50rpx;
    text-align: center;
    box-sizing: border-box;
}
.detail_img{
    width: 100%;
}

.detail_btns{
    display: flex;
    flex-direction: row;
    justify-content: center;
}
.btn_share{
    width: 240rpx;
    height: 96rpx;
    margin: 0 45rpx;
    margin-top: 16rpx;
}
.btn_next{
    width: 448rpx;
    height: 96rpx;
    margin-top: 6rpx;
}