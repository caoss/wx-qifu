/* pages/home.wxss */
page{
    height: 100%;
    background:#FFBC00
}
.home-con{
    width: 100%;
    height: 100%;
}
.forCanvas{
    position: fixed;
    z-index:1;
    width: 100%;
    height: 100%;
    top: 100%;
}
.home_bg{
    width: 100%;
    height: 100%;
    position: fixed;
    z-index: 5
}
.detail_pop{
    position: fixed;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.8);
    z-index: 6;
}
.detail_con{
    position: fixed;
    width: 100%;
    height: 100%;
    z-index: 8;
    display: flex;
    flex-direction: column;
    justify-content: center;
    top:-50rpx;
}
.detail_img_con{
    width: 100%;
    padding: 0 50rpx;
    text-align: center;
    box-sizing: border-box;
}
.detail_img{
    width:78%;
}

.detail_btns{
    display: flex;
    flex-direction: row;
    justify-content: center;
}
.btn_share{
    width: 240rpx;
    height: 96rpx;
    margin: 0 45rpx;
    margin-top: 16rpx;
}
.btn_next{
    width: 448rpx;
    height: 96rpx;
    margin-top: 6rpx;
}

.action-pos {
    display: flex;
    position: fixed;
    bottom: 30rpx;
    align-items: center;
    justify-content:space-around;
    width: 100%;
}
.act_img{
    width: 100%;
    height: 116rpx;
    margin: 0 16rpx;
}